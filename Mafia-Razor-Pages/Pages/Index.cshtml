@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="main-container">
    <div class="mainText">
        <h1 class="display-4 text-capitalize text-white">Welcome to mafia</h1>
        <h2 class="mainSubTitle text-white">Razor Mafia, Developed by the One And Only, El Kumi ladies and gents!</h2>
    </div>
    <div class="main-image-container">
        <picture>
            <source srcset="~/images/mafia.jpg" media="(max-width: 1199px)">
            <img class="main-image" src="~/images/mafia4.jpg" alt="Mafia Image">
        </picture>
    </div>
    </br>
    <div class="d-flex flex-column justify-content-center align-items-center min-vh-50">
        <a class="btn btn-primary btn-lg w-25 mt-1" asp-area="" asp-page="Forms/RegisterUser">Register User</a>
        <a class="btn btn-primary btn-lg w-25 mt-1" asp-area="" asp-page="Forms/CharacterInput">Define Characters</a>
    </div>

</div>