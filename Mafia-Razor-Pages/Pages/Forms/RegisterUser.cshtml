@* <link rel="stylesheet" href="~/css/RegistrationStyleSheet.css" asp-append-version="true" /> *@

<div class="register-container">
    <div class="title">Registration</div>
    <div class="register-content">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="user-details">
                <div class="input-box">
                    <span class="details">First Name</span>
                    <span asp-validation-for="player.Name" class="text-danger"></span>
                    <input type="text" asp-for="player.Name" placeholder="Enter your name" required />
                </div>

                <div class="input-box">
                    <span class="details">Second Name</span>
                    <span asp-validation-for="player.Surname" class="text-danger"></span>
                    <input type="text" asp-for="player.Surname" placeholder="Enter your surname" required />
                </div>

                <div class="input-box">
                    <span class="details">Age</span>
                    <span asp-validation-for="player.Age" class="text-danger"></span>
                    <input type="number" asp-for="player.Age" placeholder="Age" required />
                </div>

                <div class="input-box">
                    <span class="details">Phone Number</span>
                    <span asp-validation-for="player.PhoneNumber" class="text-danger"></span>
                    <input type="tel"asp-for="player.PhoneNumber" placeholder="Phone Number" required />
                </div>

                <div class="input-box">
                    <span class="details">Gmail</span>
                    <span asp-validation-for="player.Gmail" class="text-danger"></span>
                    <input type="email" asp-for="player.Gmail" placeholder="Gmail" required />
                </div>

            </div>
            <div class="gender-details">

                <input type="radio" name="gender" id="dot-1">
                <input type="radio" name="gender" id="dot-2">

                <span class="gender-title">Gender</span>

                <div class="category">
                    <label for="dot-1">
                        <span class="dot one"></span>
                        <span class="gender">Male</span>
                    </label>

                    <label for="dot-2">
                        <span class="dot two"></span>
                        <span class="gender">Female</span>
                    </label>
                </div>
            </div>

            <div class="button">
                <button class="btn btn-primary mt-1" type="submit">Register User</button>
            </div>
        </form>
        @section Scripts {
            @{
                await Html.RenderPartialAsync("_ValidationScriptsPartial");
            }
        }
    </div>
</div>

