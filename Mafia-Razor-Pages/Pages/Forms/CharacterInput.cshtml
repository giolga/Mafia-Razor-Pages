@page
@model Mafia_Razor_Pages.Pages.Forms.CharacterInputModel
@{
}

<section>
    <form method="post" class="mx-auto mt-5 mb-5 px-5 pt-5 pb-5 rounded-5 alert-light col-4">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="register-character">
            <span asp-validation-for="Character" class="text-danger"></span>
            <input type="text" class="mt-1" asp-for="Character" placeholder="Character" />
            <br />
        </div>

        <div class="d-flex justify-content-center">
            <button class="btn btn-primary mt-1" type="submit">Register User</button>
        </div>
    </form>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</section>

<section>
    <h3>Characters</h3>

    <table class="table">
        <thead>
            <tr>
                <th>Character</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var character in Model.Characters)
            {
                <tr>
                    <td>@character</td>
                </tr>
            }
        </tbody>
    </table>
</section>